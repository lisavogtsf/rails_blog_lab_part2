<h1>Posts</h1>

<table class="table table-bordered table-striped">
	<tr>
		<th>Author</th>
		<th>Title</th>
		<th>Timestamp</th>
		<th>Blog Post</th>
		<th># Comments</th>
		<th>Link</th>
	</tr>
	<% @all_posts.each do |post| %>
	<tr>
		<td><%= post.author %></td>
		<td><%= post.title %></td>
		<td><%= post.created_at %></td>
		<td><%=post.description%></td>
		<td><%=post.comments.length%></td>
		<td><a href="/posts/<%=post.id%>">Show</a></td>
	</tr>
	<% end %>
</table>

<br>
<a href="/posts/new">New Post</a>
